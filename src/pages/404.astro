---
import '../styles/global.css';

const title = '404 â€” Page Not Found';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#660a23" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;600;700;900&display=swap" />
    <title>{title}</title>
  </head>
  <body>
    <div class="not-found">
      <h1>404</h1>
      <p>This page has been hidden like Esther's identity.</p>
      <a href="/" class="home-link">Back to the Megillah</a>
    </div>

    <style>
      .not-found {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100dvh;
        text-align: center;
        padding: 2rem;
      }

      .not-found h1 {
        font-size: 6rem;
        font-weight: 900;
        color: var(--color-burgundy);
        line-height: 1;
        margin-bottom: 0.5rem;
      }

      .not-found p {
        font-size: 1.25rem;
        color: var(--color-text-light);
        margin-bottom: 2rem;
      }

      .home-link {
        display: inline-block;
        background: var(--color-burgundy);
        color: var(--color-white);
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: background 0.2s;
      }

      .home-link:hover {
        background: var(--color-burgundy-light);
        text-decoration: none;
      }
    </style>
  </body>
</html>
