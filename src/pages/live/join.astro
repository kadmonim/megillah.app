---
import '../../styles/global.css';
import LiveFollower from '../../components/islands/LiveFollower';

const title = 'Megillah Live — Follow along in real time';
const description = 'Follow along with a live Megillah reading — auto-scroll synced with the reader.';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#660a23" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500;700;900&display=swap" />
    <link rel="preload" href="/sounds/gragger1.mp3" as="audio" />
    <link rel="preload" href="/sounds/gragger2.mp3" as="audio" />
    <link rel="preload" href="/sounds/gragger3.mp3" as="audio" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />

    <title>{title}</title>
  </head>
  <body>
    <main class="container">
      <div class="maintenance">
        <div class="maintenance-card">
          <span class="material-icons" style="font-size:48px;color:var(--color-burgundy);margin-bottom:12px;">rocket_launch</span>
          <h1>Upgrading to a faster system</h1>
          <p>We're moving to a faster server for a better experience. Please check back in 15 minutes.</p>
        </div>
      </div>
    </main>
  </body>
</html>

<style>
  main {
    padding-top: 12px;
    padding-bottom: 24px;
  }

  .loading-screen {
    min-height: 80dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px 16px;
  }

  .loading-card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 48px 32px;
    box-shadow: 0 4px 20px rgba(102, 10, 35, 0.12);
    max-width: 380px;
    width: 100%;
    text-align: center;
  }

  .loading-title {
    font-size: 1.4rem;
    font-weight: 900;
    color: var(--color-burgundy);
    margin-bottom: 24px;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid var(--color-cream-dark);
    border-top-color: var(--color-burgundy);
    border-radius: 50%;
    margin: 0 auto 16px;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .loading-text {
    font-size: 0.95rem;
    color: var(--color-text-light);
  }
</style>
