---
import '../../styles/global.css';
import LiveSession from '../../components/islands/LiveSession';

const title = 'Megillah Live — Follow along in real time';
const description = 'Follow along with a live Megillah reading — auto-scroll synced with the reader.';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#660a23" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;600;700;900&display=swap" />
    <link rel="preload" href="/sounds/gragger1.mp3" as="audio" />
    <link rel="preload" href="/sounds/gragger2.mp3" as="audio" />
    <link rel="preload" href="/sounds/gragger3.mp3" as="audio" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://megillah.app/og-live.png" />
    <meta property="og:image:width" content="1024" />
    <meta property="og:image:height" content="500" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://megillah.app/og-live.png" />

    <title>{title}</title>
  </head>
  <body>
    <main class="container">
      <LiveSession client:load />
    </main>
  </body>
</html>

<style>
  main {
    padding-top: 0;
    padding-bottom: 24px;
  }
</style>
